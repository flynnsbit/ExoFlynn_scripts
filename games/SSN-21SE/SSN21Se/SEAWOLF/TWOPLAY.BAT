@echo off
cls
echo SSN-21 SeaWolf Two-Player Mode
echo 
echo Select the connection method.
echo 
echo A. MODEM
echo B. Direct Connect on COM1
echo C. Direct Connect on COM2
echo D. Network: NETBIOS GROUP #1
echo E. Network: NETBIOS GROUP #2
echo F. Network: NETBIOS GROUP #3
echo G. Network: NETBIOS GROUP #4
echo H. Cancel selection.
echo 
ASK AH
IF ERRORLEVEL 8 GOTO QUIT
IF ERRORLEVEL 7 GOTO NETBIOS4
IF ERRORLEVEL 6 GOTO NETBIOS3
IF ERRORLEVEL 5 GOTO NETBIOS2
IF ERRORLEVEL 4 GOTO NETBIOS1
IF ERRORLEVEL 3 GOTO COM2
IF ERRORLEVEL 2 GOTO COM1
IF ERRORLEVEL 1 GOTO MODEM
GOTO QUIT
:NETBIOS1
NETB2 1
GOTO QUIT
:NETBIOS2
NETB2 2
GOTO QUIT
:NETBIOS3
NETB2 3
GOTO QUIT
:NETBIOS4
NETB2 4
GOTO QUIT
:MODEM
MS
IF ERRORLEVEL 1 GOTO QUIT
MODEM
GOTO QUIT
:COM2
comio 2
GOTO QUIT
:COM1
comio 1
GOTO QUIT
:QUIT
CONNECT
IF ERRORLEVEL 1 GOTO WOLF
echo No connection established.
goto END
:WOLF
seawolf
:END
