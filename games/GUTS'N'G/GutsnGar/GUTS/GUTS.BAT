@ECHO OFF
CLS
SET CAUSEWAY=NOVM
OPTIONS.EXE
IF NOT ERRORLEVEL 1 GOTO EXIT

:LOOP

GUTS4DOS.EXE %1
IF ERRORLEVEL 103 GOTO SAVEGAME
IF ERRORLEVEL 102 GOTO FINALE

OPTIONS.EXE -O
IF ERRORLEVEL 1 GOTO LOOP
GOTO EXIT

:FINALE
OPTIONS -FINALE
IF ERRORLEVEL 1 GOTO LOOP
GOTO EXIT

:SAVEGAME
OPTIONS -SAVEGAME
IF ERRORLEVEL 1 GOTO LOOP

:EXIT
