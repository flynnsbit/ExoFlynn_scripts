@ECHO OFF
CLS
IF "%1"=="" GOTO SPECIFYDREV

ECHO Kopiere AUTOEXEC.OLD til AUTOEXEC.BAT ...
IF NOT EXIST %1\AUTOEXEC.OLD GOTO NOTINSTALLED
COPY %1\AUTOEXEC.OLD %1\AUTOEXEC.BAT > NUL

ECHO Kopiere CONFIG.OLD til CONFIG.SYS ...
IF NOT EXIST %1\CONFIG.OLD GOTO NOTINSTALLED
COPY %1\CONFIG.OLD %1\CONFIG.SYS > NUL

ERASE %1\AUTOEXEC.OLD
ERASE %1\CONFIG.OLD

IF NOT EXIST %1\LUFFE\*.* GOTO NOTINSTALLED
CD %1\LUFFE > NUL
DEL %1\LUFFE\*.EGA > NUL
DEL %1\LUFFE\*.SPC > NUL
DEL %1\LUFFE\*.EXE > NUL
DEL %1\LUFFE\USERS.* > NUL
DEL %1\LUFFE\*.DAT > NUL
DEL %1\LUFFE\*.BAT > NUL
DEL %1\LUFFE\*.LUF > NUL
DEL %1\LUFFE\*.SYS > NUL
DEL %1\LUFFE\*.COM > NUL
DEL %1\LUFFE\LEVEL.* > NUL
CD %1\ > NUL
RD %1\LUFFE > NUL
ECHO LUFFE er nu fjernet fra Deres hardisk.
GOTO END

:NOTINSTALLED
ECHO Det er ikke muligt at fjerne LUFFE. Angiv evt. et andet drev.
GOTO END
        
:SPECIFYDREV
